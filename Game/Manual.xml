                <source>/Augmentations</source>
                <!--
                    We note that "/Augmentations" has subcategories.
                    
                    In this case, each category is layed out according
                    to the specification below, but put into it's own
                    section.
                -->
                <item-spec>
                    <item field="name" width="">Name</item>
                    <item field="location" width="">Location</item>
                    <item field="cp" width="">CP</item>
                    <item field="prerequisites" width="">Prereq.</item>
                    <item field="description" width="">Description</item>
                </item-spec>
                <table-items>
                    <item>name</item>
                    <item>location</item>
                    <item>cp</item>
                    <item>prerequisites</item>
                </table-items>
                <per-item-layout>
                    <title>name</title>
                    <item-spec-table />
                    <text>description</text>
                </per-item-layout>
            </tabular-content>
        </chapter>
