      <datum name="Climbing Feet">
        <field name="Name" title="yes">
          <text>Climbing Feet</text>
        </field>
        <field name="MetaTag"><text>No value</text></field>
        <field name="Character Points" table="yes">
          <text>3</text>
        </field>
        <field name="Prerequisite"  table="yes"><text>No value</text></field>
        <field name="Location" table="yes">
          <text>Leg</text>
        </field>
        <field description="yes" name="Description">
          <text>A special set of feet designed to improve your ability to climb. -1 DEX for normal tasks. +4 to climbing rolls. When combined with Climbing hands, bonus is a total of +6</text>
        </field>
      </datum>
